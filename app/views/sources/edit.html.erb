<html>
    <head>
        <br/>
        <div class='container-sm'>
            <h1>editing</h1>
             <hr class="my-4">
        </div>
        <br/>
    <div class='container-sm'>
        <%= form_with model: @source, html: { class: 'border p-3 rounded bg-dark text-white' } do |f| %>
            <div class="form-group container-sm">
                <%= f.label :description, class: 'form-label' %>
                <%= f.text_area :description, class: 'form-control', placeholder: "description" %>
            </div>
            <div class="form-group mt-3 container-sm">
                <%= f.label :link, class: 'form-label' %>
                <%= f.text_area :link, class: 'form-control', placeholder: "link" %>
            </div>
            <div class="form-group mt-3 container-sm">
                <%= f.submit "Update", class: 'btn btn-primary' %>
            </div>
        <% end %>
    </div>
<html>
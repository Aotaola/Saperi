<%= form_with(model: @collection_source, local: true) do |form| %>
  <%= form.hidden_field :source_id, value: @source.id %>
  <%= form.submit 'Add Source to Collection' %>
<% end %>

<%= form_with(url: search_collections_path, method: :get, local: true) do |form| %>
  <%= form.text_field :query, placeholder: "Search collections..." %> 
  <%= form.submit 'Search' %> 
<% end %>


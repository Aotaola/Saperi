
<div class="container-md">
    <h1 class="font-monospace">
        Collections
    </h1>
<br/>
<%= render 'collections/search' %>
    <div class = 'container'>
      <table class = 'table'>
        <thead>
          <tr>
            <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
            <th><%= sort_link(@query, :description, "Description", default_order: :asc) %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= @collections.each do |collection|%>
            <tr>
              <td><%= link_to collection.title, collection_path(collection)%></td>
              <td><%= collection.description.truncate_words(20)%>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
    <br/>
    <div class="container-md"> 
      <% @collections.each do |collection|%>
          <h4 class="font-monospace">
              <%= link_to collection.title, collection_path(collection) %>
              </h4>
            <br/>
       <%end%>
    </div>
</div>
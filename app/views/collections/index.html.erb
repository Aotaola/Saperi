
<div class="container-md">
    <h1 class="font-monospace">
        Collections
    </h1>
<br/>
<%= render 'collections/search' %>
<table>
  <thead>
    <tr>
      <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
      <th><%= sort_link(@query, :description, "Collection description", default_order: :desc) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
       <div class="container-md"> 
       
        <% @collections.each do |collection|%>
            <h4 class="font-monospace">
                <%= link_to collection.title, collection_path(collection) %>
            </h4>
             <br/>
        <%end%>
        </div>
</div>
<html>
    <head>
        <div class='jumbotron'>
            <div class='container-sm'>
                <h1>Signup!</h1>
                <hr class="my-4">
            </div>
        </div>
    </head>
    <body id='signup-page'>
        <div class='container-sm'>
             <br/>
            <%= form_with model: @user, local: true, html: { class: "px-4 py-3" } do |f| %>
                <div class="mb-3">
                    <%= f.label :name, class: "form-label" %>
                    <%= f.text_field :name, class: "form-control" %>
                </div>
                <div class="mb-3">
                    <%= f.label :bio, class: "form-label" %>
                    <%= f.text_field :bio, class: "form-control" %>
                </div>
                <div class="mb-3">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.email_field :email, class: "form-control" %>
                </div>
                <div class="mb-3">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password, class: "form-control" %>
                </div>
                <div class = 'card-body d-flex justify-content-between'>
                    <label class="btn btn-outline-light custom-avatar-label">
                        <%= f.radio_button :avatar, 'avatar_design_1.png', class: 'btn btn-outline-sucess' %> 
                        <%= image_tag 'avatar_design_1.png', class: "custom-avatar"%>
                    </label>
                    <br/>
                    <label class="btn btn-outline-light custom-avatar-label">
                        <%= f.radio_button :avatar, 'avatar_design_2.png', class: 'btn btn-outline-sucess' %> 
                        <%= image_tag 'avatar_design_2.png', class: "custom-avatar"%>
                    </label>
                    <br/>
                    <label class="btn btn-outline-light custom-avatar-label">
                        <%= f.radio_button :avatar, 'avatar_design_3.png', class: 'btn btn-outline-sucess' %> 
                        <%= image_tag 'avatar_design_3.png', class: "custom-avatar"%>
                    </label>
                </div> 
                <br/>
                <div class="mb-3">
                    <%= f.submit "Sign up", class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>
        
    </body>
</html>


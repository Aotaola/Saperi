<html>
    <div>
        <%= form_with model: @user do |f|%>
            <div>
                <%= f.label :name %>
                <%= f.text_field :name %>
            </div>
            <div>
                <%= f.label :bio %>
                <%= f.text_field :bio %>
            </div>
            <div>
                <%= f.label :email %>
                <%= f.email_field :email %>
            </div>
            <div>
                <%= f.label :password %>
                <%= f.password_field :password %>
            </div>
            <div>
            <%= f.submit %>
            </div>
        <%end%>
    </div>

</html>
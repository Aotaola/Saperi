<div class='container-md'>
    <h2>Edit</h2>

    <%= form_with model: @user, html: { class: 'border p-3 rounded' } do |f| %>
        <div class="form-group">
            <%= f.label :name, class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control outline-primary' %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.text_field :email, class: 'form-control outline-primary' %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :bio, class: 'form-label' %>
            <%= f.text_field :bio, class: 'form-control outline-primary' %>
        </div>
        <%# <div class="form-group mt-3">
            <%= f.label :avatar, class: 'form-label' %>
            <%# <%= f.file_field :avatar, class: 'form-control-file' %> 
        <%# </div> %> 
        <div class="form-group mt-3">
            <%= f.label :password, class: 'form-label' %>
            <%= f.text_field :password, class: 'form-control outline-primary' %>
        </div>
        <div class="form-group mt-3">
            <%= f.submit "Update", class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>

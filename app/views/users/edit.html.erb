<div class='container-md'>
    <h2>Edit</h2>

    <%= form_with model: @user, html: { class: 'border p-3 rounded' } do |f| %>
        <div class="form-group">
            <%= f.label :name, class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control outline-primary' %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.text_field :email, class: 'form-control outline-primary' %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :bio, class: 'form-label' %>
            <%= f.text_field :bio, class: 'form-control outline-primary' %>
        </div>
       <div  class = 'card-body d-flex '>
            <label class="btn btn-outline-light custom-avatar-label">
                <%= f.radio_button :avatar, 'avatar_design_1.png' %> 
                <%= image_tag 'avatar_design_1.png', class: "custom-avatar"%>
            </label>
            <br/>
            <label class="btn btn-outline-light custom-avatar-label">
                <%= f.radio_button :avatar, 'avatar_design_2.png' %> 
                <%= image_tag 'avatar_design_2.png', class: "custom-avatar"%>
            </label>
            <br/>
            <label class="btn btn-outline-light custom-avatar-label">
                <%= f.radio_button :avatar, 'avatar_design_3.png' %> 
                <%= image_tag 'avatar_design_3.png', class: "custom-avatar"%>
            </label>
        </div> 
        <div class="form-group mt-3">
            <%= f.label :password, class: 'form-label' %>
            <%= f.text_field :password, class: 'form-control outline-primary' %>
        </div>
        <div class="form-group mt-3">
            <%= f.submit "Update", class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>
